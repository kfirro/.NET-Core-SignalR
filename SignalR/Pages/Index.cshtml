@page
<div class="container">
    <div class="row">&nbsp;</div>
    <div class="row" style="float:left">
        <div class="col-6">
            <input type="checkbox" id="cbLiveView" />&nbsp; Turn on live view
        </div>
    </div>
    <div class="row" style="float:right">
        <div class="col-6">&nbsp;</div>
        <div class="col-6">
            Invoke Command <input type="text" id="messageInput" />
            <input type="button" id="sendButton" value="Send Message" />
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <hr />
        </div>
    </div>
    <div class="row">
        <div class="col-6">&nbsp;</div>
        <div class="col-6">
            <ul id="messagesList"></ul>
        </div>
    </div>
    <div class="row">
        <div style="width:75%">
            <canvas id="chart"></canvas>
        </div>
    </div>
</div>
@section scripts {
    <script src="~/js/pages/indexPages.js" asp-append-version="true"></script>
}